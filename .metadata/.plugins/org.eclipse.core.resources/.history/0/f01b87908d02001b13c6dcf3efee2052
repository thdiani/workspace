package decisao;

import javax.swing.JOptionPane;

public class Fix3 {

	
	public static void main(String[] args) {
		short capital = Short.parseShort(JOptionPane.showInputDialog("Capital:"));
		short taxa = Short.parseShort(JOptionPane.showInputDialog("Tx Juros:"));
		byte periodo = Byte.parseByte(JOptionPane.showInputDialog("Meses:"));
		
		float montante = (float) (capital*((1+taxa/100)^periodo));
		
		System.out.println("Area do Circulo: " + montante);			
		}
	
		
	
		
	}

